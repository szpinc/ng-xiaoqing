swiper {
  height: 400rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.head {
  background-color: #f5f5f6;
  height: 80rpx;
  font-size: 28rpx;
  box-shadow: 0 0 10px #909090;
}

.head .title {
  color: #a51b4c;
  line-height: 80rpx;
  margin-left: 25rpx;
}

.comment {
  background: #f5f5f6;
  margin: 20rpx;
  height: auto;
  display: flex;
  /* align-items: center; */
  box-shadow: 2px 2px 10px #909090;
  border-radius: 25rpx;
  align-items: center;
}

.comment .comment-left {
  width: 120rpx;
  margin: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.comment .comment-left .user-head-pic {
  width: 80rpx;
  height: 80rpx;
  border: 0 solid #f00;
  border-radius: 100rpx;
  background-color: #f10b2e;
}

.comment .comment-left .user-name {
  margin-top: 10rpx;
  font-size: 10rpx;
}

.comment .comment-right {
  margin: 20rpx;
  display: flex;
  flex-direction: column;
}

.comment .comment-right .comment-msg {
  margin-top: 0rpx;
  font-size: 12rpx;
}

.comment .comment-right .comment-content {
  margin-top: 10rpx;
  font-size: 18rpx;
}

.comment-msg .msg {
  float: left;
}

.comment-msg .area {
  float: right;
}

.footer {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  background: #f5f5f6;
}

.footer .btn-submit {
  margin: 20rpx auto 20rpx auto;
  width: 350rpx;
  height: 80rpx;
  background: #a51b4c;
  color: #fff;
  font-size: 35rpx;
}
